programa {
  funcao inicio() {
    //declaracao de variaveis
    real n1, n2, n3, n4,media

    //entrada de dados
    escreva("primeira nota: ")
    leia(n1)
    escreva("segundas notas: ")
    leia(n2)
     escreva("terceira nota: ")
    leia(n3)
    escreva("quarta notas: ")
    leia(n4)

    //processamento
    media=(n1+n2+n3+n4)/4

    //saida de dados
    escreva("a media bimestral foi: ",media)
  }
}
