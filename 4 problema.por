programa {
  funcao inicio() {
    //declaracao de variaveis
    real n1, n2, n3,media

    //entrada de dados
    escreva("valor gasto no primeiro mes: ")
    leia(n1)
    escreva("valor gasto no segundo mes: ")
    leia(n2)
    escreva("valor gasto no terceiro mes: ")
    leia(n3)

    //processamento
    media=(n1+n2+n3)/3

    //saida de dados
    escreva("a media de gasto no 3 primeiros mes foi ",media)
  }
}
